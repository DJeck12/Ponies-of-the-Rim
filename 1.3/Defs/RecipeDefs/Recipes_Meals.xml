<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef ParentName="CookMealFineBase">
        <defName>CookMealFine_Hay</defName>
        <label>cook hay fine meal</label>
        <description>Cook a somewhat complex meal from plant ingredients.</description>
        <jobString>Cooking hay fine meal.</jobString>
        <recipeUsers>
            <li>ElectricStove</li>
            <li>FueledStove</li>
	    </recipeUsers>
        <ingredients>
            <li>
                <filter>
                <categories>
                    <li>PlantFoodRaw</li>
                    <li>AnimalProductRaw</li>
                </categories>
                </filter>
                <count>0.5</count>
            </li>
            <li>
                <filter>
                <thingDefs>
                    <li>Hay</li>
                </thingDefs>
                </filter>
                <count>0.25</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <disallowedCategories>
                <li>MeatRaw</li>
            </disallowedCategories>
        </fixedIngredientFilter>
        <products>
            <MealFine_Hay>1</MealFine_Hay>
        </products>
    </RecipeDef>

