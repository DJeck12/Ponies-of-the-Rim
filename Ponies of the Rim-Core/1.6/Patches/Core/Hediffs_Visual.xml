<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationConditional">
				<xpath>Defs/HediffDef[defName="ArchotechEye" or defName="BionicEye"]/renderNodeProperties/li[workerClass="PawnRenderNodeWorker_HediffEye"]/subworkerClasses</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="ArchotechEye" or defName="BionicEye"]/renderNodeProperties/li[workerClass="PawnRenderNodeWorker_HediffEye"]</xpath>
					<value>
						<subworkerClasses>
							<li>PoniesOfTheRim.PonyRenderSubWorkerEye</li>
						</subworkerClasses>
					</value>
				</nomatch>
				<match Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="ArchotechEye" or defName="BionicEye"]/renderNodeProperties/li[workerClass="PawnRenderNodeWorker_HediffEye"]/subworkerClasses</xpath>
					<value>
						<li>PoniesOfTheRim.PonyRenderSubWorkerEye</li>
					</value>
				</match>
			</li>

			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="BionicEye"]/renderNodeProperties</xpath>
				<value>
					<li Class="PoniesOfTheRim.PonyRenderNodeProperties_Eye">
						<workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
						<texPath>Things/Races/Pony/Eyes/BionicEye</texPath>
						<parentTagDef>Head</parentTagDef>
						<drawSize>0.14</drawSize>
						<drawData>
							<defaultData>
								<layer>56</layer>
								<offset>(0, 0, -0.24)</offset>
							</defaultData>
							<dataWest>
								<flip>true</flip>
							</dataWest>
						</drawData>
						<subworkerClasses>
							<li>PoniesOfTheRim.NoPawnRenderSubWorkerEye</li>
						</subworkerClasses>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/HediffDef[defName="ArchotechEye"]/renderNodeProperties</xpath>
				<value>
					<li Class="PoniesOfTheRim.PonyRenderNodeProperties_Eye">
						<workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
						<texPath>Things/Races/Pony/Eyes/ArchotechEye_Male</texPath>
						<texPathFemale>Things/Races/Pony/Eyes/ArchotechEye_Female</texPathFemale>
						<parentTagDef>Head</parentTagDef>
						<drawSize>0.14</drawSize>
						<drawData>
							<defaultData>
								<layer>56</layer>
								<offset>(0, 0, -0.24)</offset>
							</defaultData>
							<dataWest>
								<flip>true</flip>
							</dataWest>
						</drawData>
						<subworkerClasses>
							<li>PoniesOfTheRim.NoPawnRenderSubWorkerEye</li>
						</subworkerClasses>
					</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>