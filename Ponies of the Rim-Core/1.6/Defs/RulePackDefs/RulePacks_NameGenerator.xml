<?xml version="1.0" encoding="UTF-8"?>
<Defs>

<!--Pony-->

	<RulePackDef>
		<defName>NameGeneratorPony</defName>
		<rulePack>
			<rulesStrings>
				<li>r_name->[First] [Last]</li>
				<li>r_name->[First] [Word]</li>
				<li>r_name->[Word] [Last]</li>
			</rulesStrings>
			<rulesFiles>
				<li>First->Pony_Names/Name_Pony_First</li>
				<li>Last->Pony_Names/Name_Pony_Last</li>
				<li>Word->Pony_Names/Name_Pony_Word</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

