<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationConditional">
					<success>Always</success>
					<xpath>/Defs/FactionDef[@Name="OutlanderRoughBase"]/disallowedMemes</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/FactionDef[@Name="OutlanderRoughBase"]</xpath>
						<value>
							<disallowedMemes>
								<li MayRequire="Ludeon.RimWorld.Ideology">Pony_Harmony</li>
							</disallowedMemes>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/FactionDef[@Name="OutlanderRoughBase"]/disallowedMemes</xpath>
						<value>
							<li MayRequire="Ludeon.RimWorld.Ideology">Pony_Harmony</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/FactionDef[@Name="TribeRoughBase"
					or @Name="TribeSavageBase"]/disallowedMemes</xpath>
					<value>
						<li>Pony_Harmony</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>