<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThoughtDef>
		<defName>TerribleFortune</defName>
		<thoughtClass>Thought_AttendedRitual</thoughtClass>
		<durationDays>6</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
		<li>
			<label>terrible fortune</label>
			<description>The Prophet foretold us terrible events! We are doomed!</description>
			<baseMoodEffect>-8</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>BadFortune</defName>
		<thoughtClass>Thought_AttendedRitual</thoughtClass>
		<durationDays>6</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
		<li>
			<label>bad fortune</label>
			<description>The Prophet foretold us bad events in the future. It's discouraging, but we're going to try our best.</description>
			<baseMoodEffect>-3</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>GoodFortune</defName>
		<thoughtClass>Thought_AttendedRitual</thoughtClass>
		<durationDays>6</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
		<li>
			<label>good fortune</label>
			<description>The Prophet foretold us good events in the future. We must try to make them really come true.</description>
			<baseMoodEffect>3</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WonderfulFortune</defName>
		<thoughtClass>Thought_AttendedRitual</thoughtClass>
		<durationDays>6</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
		<li>
			<label>wonderful fortune</label>
			<description>The Prophet foretold us wonderful events! We can rejoice that all will be well.</description>
			<baseMoodEffect>8</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

</Defs>