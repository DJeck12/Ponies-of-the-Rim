<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationInsert">
					<xpath>/Defs/ThingDef[defName="Apparel_PsyfocusRobe"
					or defName="Apparel_RobeRoyal"
					or @Name="ApparelArmorCataphractBase"]/apparel/bodyPartGroups</xpath>
					<value>
						<shellRenderedBehindHead>true</shellRenderedBehindHead>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name="ApparelArmorHelmetCataphractBase"
					or defName="Apparel_CrownStellic"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>TopHead</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>