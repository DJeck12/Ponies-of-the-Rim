<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<PawnKindDef Name="BasePonyPawnKind" Abstract="True">
		<labelMale>stallion</labelMale>
		<labelFemale>mare</labelFemale>
		<combatPower>30</combatPower>
		<isFighter>false</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<apparelIgnorePollution MayRequire="Ludeon.RimWorld.Biotech">true</apparelIgnorePollution>
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<initialWillRange>0~0</initialWillRange>
		<humanPregnancyChance>0.06</humanPregnancyChance>
	</PawnKindDef>

	<PawnKindDef ParentName="BasePonyPawnKind" Name="BaseColonyPonyPawnKind" Abstract="True">
		<defaultFactionType>PlayerColony</defaultFactionType>
		<chemicalAddictionChance>0.06</chemicalAddictionChance>
		<apparelTags>
			<li>IndustrialBasic</li>
		</apparelTags>
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<apparelMoney>350~600</apparelMoney>
		<backstoryCryptosleepCommonality>1</backstoryCryptosleepCommonality>
		<techHediffsChance>0.03</techHediffsChance>
		<techHediffsMoney>50~800</techHediffsMoney>
		<techHediffsTags>
			<li>Poor</li>
			<li>Simple</li>
			<li>ImplantEmpireCommon</li>
		</techHediffsTags>
		<techHediffsDisallowTags>
			<li>PainCauser</li>
		</techHediffsDisallowTags>
		<initialResistanceRange>13~21</initialResistanceRange>
	</PawnKindDef>

	<PawnKindDef ParentName="BasePonyPawnKind" Name="BaseTribePonyPawnKind" Abstract="True">
		<defaultFactionType>PlayerTribe</defaultFactionType>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<apparelTags>
			<li>Neolithic</li>
		</apparelTags>
		<apparelMoney>200~200</apparelMoney>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
		<techHediffsMoney>50~50</techHediffsMoney>
